<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shtp.product.mapper.ProductMapper">
    <resultMap id="BaseResultMap" type="map">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="userid" property="userid"/>
        <result column="userface" property="userface"/>
        <result column="imageUrl" property="imageUrl"/>
        <result column="price" property="price"/>
        <result column="description" property="description"/>
    </resultMap>
    <insert id="postProduct" parameterType="com.shtp.product.bean.ProductUnit">
        insert into productunit(userid, imageUrl, price, description) values (#{userId}, #{imageUrl}, #{price}, #{description});
    </insert>
    <select id="getAllPruducts" resultType="map">
        select userid, name, userface, imageUrl, description, price from user, productunit where user.id=productunit.userid;
    </select>
</mapper>
